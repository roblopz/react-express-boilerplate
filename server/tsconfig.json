{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../build",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "target": "ES2020",    
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true
  }
}